# 环境配置
ENV=production

# 基础配置
PROJECT_NAME=FastAPI Template
API_V1_STR=/api/v1
API_PORT=8001

# 数据库配置 (使用RDS)
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=your-rds-endpoint.region.rds.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Celery配置 (自动生成，无需手动配置)
# CELERY_BROKER_URL和CELERY_RESULT_BACKEND将根据Redis配置自动生成

# HTTP代理配置 - 生产环境建议关闭
USE_HTTP_PROXY=false
HTTP_PROXY=http://127.0.0.1:7890
HTTPS_PROXY=http://127.0.0.1:7890

# Email配置
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="FastAPI Template"
MAIL_ENCRYPTION=tls

# Brevo配置 (可选，如果使用Brevo服务)
BREVO_API_KEY=your_brevo_api_key
BREVO_EMAIL_FROM=your_email@domain.com
BREVO_EMAIL_FROM_NAME="FastAPI Template"

# 管理员邮箱
ADMIN_EMAIL=admin@yourdomain.com

# JWT配置
SECRET_KEY=your_very_long_secret_key_here_please_change_this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS S3配置
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_bucket_name
AWS_ENDPOINT=https://s3.amazonaws.com